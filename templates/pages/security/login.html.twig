{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

<form method="post" id="login">

    <h2>Login here</h2>

    {% if error %}
        <div class="warning-flash">
            <p class="padding-bottom-none">Email or password not valid.</p>
        </div>
    {% endif %}

    <div>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required="required" autofocus>
    </div>

    <div class="form-last-div-space">
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" autocomplete="current-password" required="required">
    </div>

    <div>
        <button type="submit">Login</button>
    </div>

    <div class="margin-bottom">
        <a class="a-button" href="{{ path('app_forgot_password_request') }}">Forgot Password</a>    
    </div>

    <h2>Create your account</h2>

    <a class="a-button" href="{{ path('app_register') }}">Register</a>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

</form>

{% endblock %}